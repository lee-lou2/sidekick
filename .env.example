# ===========================================
# Required
# ===========================================

# Google Gemini API (GEMINI_API_KEY also works for backward compatibility)
GOOGLE_API_KEY=your_gemini_api_key_here

# ===========================================
# Optional - Core
# ===========================================

# Gemini Model (default: gemini-3-flash-preview)
GEMINI_MODEL=gemini-3-flash-preview

# Pydantic Logfire Observability
LOGFIRE_TOKEN=

# ===========================================
# Optional - Slack Integration
# ===========================================

SLACK_BOT_TOKEN=xoxb-your-token
SLACK_APP_TOKEN=xapp-your-token

# ===========================================
# Optional - API Security
# ===========================================

# API authentication key (X-API-Key header). Leave empty to disable auth.
API_AUTH_KEY=

# Rate limit: requests per minute (default: 60)
API_RATE_LIMIT=60

# ===========================================
# Optional - External Services
# ===========================================

# MCP (Model Context Protocol) - GitHub integration
GITHUB_TOKEN=ghp_your_github_token_here
